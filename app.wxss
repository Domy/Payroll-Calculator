/**app.wxss**/
page {
  background: #EFEFF4;
  height: 100%;
}

.section .section-title {
  background: #f5f5f5;
  color: #999999;
  font-size: 11pt;
  padding: 20rpx 25rpx;
}

.section .item{
  position: relative;
  background: #ffffff;
  border-bottom: #ececec solid 1px;
  font-size: 11pt;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx;
}

.section .item:last-child {
  border-bottom: none;
}

.section .item .lable {
  white-space: nowrap;
}

.section .item input {
  text-align: right;
}

.section .item .rate {
  color: #b7b7b7;
}

input {
  display: inline-block;
}

.section .item .pen {
  position: absolute;
  right: 5rpx;
  top: 25rpx;
  width: 40rpx;
  height: 40rpx;
}

.section .item wx-input {
  margin-right: 20rpx;
}

.edit-item .arrow {
  width: 25rpx;
  height: 25rpx;
}