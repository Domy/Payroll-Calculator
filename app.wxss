/**app.wxss**/
page {
  background: #EFEFF4;
  height: 100%;
}

.section .section-title {
  background: #f5f5f5;
  color: #999999;
  font-size: 11pt;
  padding: 20rpx 25rpx;
}

.section .item{
  background: #ffffff;
  border-bottom: #ececec solid 1px;
  font-size: 11pt;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx;
}

.section .item:last-child {
  border-bottom: none;
}

.section .item .input-box {
  background: url('../../images/icon_edit.png') right center no-repeat;
  background-size: 20rpx;
  padding-right: 30rpx;
}

.section .item input {
  text-align: right;
}

.section .rate {
  color: #b7b7b7;
}