.cover {
  background: #4976d3;
  height: 230rpx;
}
.cover .lable {
  padding: 30rpx 0 20rpx 25rpx;
  color: #b6c8ee;
  font-size: 11pt;
  font-weight: bold;
}

.cover .amount {
  padding: 0 0 0 25rpx;
  color: #92ade5;
  font-size: 11pt;
}

.cover .amount text {
  margin-right: 10rpx;
  color: #ffffff;
  font-size: 32pt;
}

.strip {
  background: #4976d3;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.strip .item {
  background: #426abe;
  color: #92ade5;
  font-size: 9pt;
  width: 100%;
  padding-left: 25rpx;
  box-sizing: border-box;
  border-right: 1px solid #4976d3;
}

.strip .item:last-child {
  border-right: none;
}

.strip .item text {
  color: #ffffff;
}



.picker {
  padding: 26rpx;
  background-color: #FFFFFF;
}

input {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.btn-area {
  padding: 0 30rpx;
}

.btn-area button {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.text-item {
  margin: 20rpx;
  padding: 26rpx;
  background-color: #FFFFFF;
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
  display: flex;
  justify-content: space-between
}


.widget{
    position: relative;
    padding-top: 26rpx;
    padding-bottom: 26rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
}
.widget__arrow{
    position: absolute;
    top: 28rpx;
    right: 44rpx;
    width: 32rpx;
    height: 32rpx;
}
.widget__line{
    content: " ";
    position: absolute;
    left: 40rpx;
    top: 0;
    right: 0;
    height: 2rpx;
    background-color: #F0F0F0;
}