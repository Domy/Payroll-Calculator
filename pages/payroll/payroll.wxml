<!--payroll-calculator.wxml-->
<view class="container payroll-calculator">
  <view class="cover">
    <view class="lable">税后所得</view>
    <view class="amount">
      <text>251558</text>元
    </view>
  </view>
  <view class="strip">
    <view class="item">个人所得税：<text>2817</text></view>
    <view class="item">社会保险：<text>8765</text></view>
    <view class="item">住房公积金：<text>4600</text></view>
  </view>

  <view class="section">
    <view class="item">
      <view class="lable">
        当前城市
      </view>
      <navigator url="">
      北京
      </navigator>
    </view>
    <view class="item">
      <view class="lable">
        税前月薪
      </view>
      <input type="digit" placeholder="0"/>
    </view>
  </view>

  <view class="section">
  <view class="section-title">缴纳基数</view>
    <view class="item">
      <view class="lable">
        社保基数
      </view>
      <input type="digit" placeholder="0"/>
    </view>
    <view class="item">
      <view class="lable">
        公积金基数
      </view>
      <input type="digit" placeholder="0"/>
    </view>
  </view>

  <view class="section">
    <view class="section-title">缴纳明细</view>
    <view class="item" wx:for="{{paymentDetail}}" wx:key="name">
      <view class="lable">
        {{item.name}} <text class="rate">{{item.rate}}%</text>
      </view>
      <view class="amount">{{item.amount}}</view>
    </view>
  </view>
</view>
