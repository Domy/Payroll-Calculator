<!--payroll-calculator.wxml-->
<view class="container payroll-calculator">
  <view class="cover">
    <view class="lable">税后所得</view>
    <view class="amount">
      <text>251558</text>元
    </view>
  </view>
  <view class="strip">
    <view class="item">个人所得税：<text>2817</text></view>
    <view class="item">社会保险：<text>8765</text></view>
    <view class="item">住房公积金：<text>4600</text></view>
  </view>
  
  <view class="section">
    <picker bindchange="bindPickerChange" value="{{index}}" range="{{cities}}">
      <view class="picker">
        当前城市：{{cities[index]}}
      </view>
    </picker>
  </view>
  <view class="section">
    <view class="section-title">月薪：</view>
    <input type="digit" placeholder="0.00" bindinput="bindKeyInput" value="{{ income }}"/>
  </view>

  <view class="section">
    <view class="item">
      <view class="lable">
        养老保险 <text class="rate">{{ cityRate[cities[index]].agefund || 8 }}%</text>
      </view>
      <view class="amount">{{ results.ageFund || 0 }}</view>
    </view>
    <view class="item">
      <view class="lable">
        医疗保险 <text class="rate">{{ cityRate[cities[index]].medfund || 2 }}%</text>
      </view>
      <view class="amount">{{ results.medFund || 0 }}</view>
    </view>
    <view class="item">
      <view class="lable">
        失业保险 <text class="rate">{{ cityRate[cities[index]].workfund || 0.2 }}%</text>
      </view>
      <view class="amount">{{ results.workFund || 0 }}</view>
    </view>
    <view class="item">
      <view class="lable">
        住房公积金 <text class="rate">{{ cityRate[cities[index]].housefund || 2 }}%</text>
      </view>
      <view class="amount">{{ results.houseFund || 0 }}</view>
    </view>
  </view>
</view>
